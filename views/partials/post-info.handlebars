<article class="post">
  <div class="title">
    <a href="{{post_url}}" class="title-header" target="_blank">{{title}}</a>
    <span>({{format_url post_url}})</span>
  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}" class="comments">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>